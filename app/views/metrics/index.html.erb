<% content_for :title do %>
  Listing metrics
<% end %>

<table class="index-table">
  <tr>
    <th>Name</th>
    <th>Key</th>
  </tr>

<% @metrics.each do |metric| %>
  <tr>
    <td><%=h metric.name %></td>
    <td><%=h metric.key %></td>
    <td id="crud-control">
      <%= link_to 'Show', metric %>
      <%= link_to 'Edit', edit_metric_path(metric) %>
      <%= link_to 'Destroy', metric, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New metric', new_metric_path %>
